# --- Required ---
TELEGRAM_BOT_TOKEN=123456:ABCDEF_your_telegram_bot_token
OPENAI_API_KEY=sk-...

# --- Optional ---
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_ONE_SHOT=false
LOG_LEVEL=INFO
DB_PATH=chatgpt_tg.db
MAX_HISTORY_MSGS=16
MAX_TOOL_ITER=3
MAX_OUTPUT_TOKENS=1200
OPENAI_PROXY=http://user:pass@host:3128  # or empty
CONTEXT_CHAR_BUDGET=120000
MAX_TEXT_PARTS_TOTAL=18
MAX_TEXT_PART_LEN=8000
ALBUM_GROUP_DELAY=0.7
TEXT_ATTACH_DELAY=1.2
LOOSE_GROUP_DELAY=0.8
TELEGRAM_LONG_MSG_THRESHOLD=1002

# PDF files
PDF_TITLE_PATTERN=ChatGPT - {date} {time} - {username}/{chat_id}
PDF_FOOTER_LINK_TEXT=Author
PDF_FOOTER_LINK_URL=https://author.com/gpt
PDF_PAGE_LABEL=Page
PDF_AUTHOR=by ButterDevelop
PDF_FOOTER_FONT_SIZE=9
PDF_LINK_COLOR=#2563EB
PDF_EXPORT_MAX=100
ALWAYS_PDF=false
PDF_FONT_PATH=
PDF_FONT_BUNDLE_DIR=fonts
PDF_FONT_STACK=Noto Sans|DejaVuSans|Roboto|Liberation Sans|Arial

# Security: allow only these Telegram user IDs (comma separated)
ALLOWLIST=111111111,222222222
# (Admins are implicitly allowed if ALLOWLIST is empty)
ADMIN_IDS=111111111

MESSAGE_PRICE_STARS=2

# Browsing
TAVILY_API_KEYS=tvly-dev1-...,tvly-dev2-...
HTTP_USER_AGENT=Mozilla/5.0 (compatible; ChatGPT-TG-Bot/1.0)